<head>

  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title>DeskVibe</title>

  <!-- Custom fonts for this template-->
  <link href="node_modules/startbootstrap-sb-admin-2/vendor/fontawesome-free/css/all.min.css" type="text/css">
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

  <!-- Custom styles for this template-->
  <link href="node_modules/startbootstrap-sb-admin-2/css/sb-admin-2.min.css">

  <script src="app/templates/member-dashboard/chart-bar-demo.js"></script>
  <script src="node_modules/chart.js/dist/Chart.js"></script>

</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

          <!-- Sidebar Toggle (Topbar) -->
          <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
            <i class="fa fa-bars"></i>
          </button>

          <!-- Topbar Search -->
          <form class="d-none d-sm-inline-block form-inline mr-auto ml-md-3 my-2 my-md-0 mw-100 navbar-search">
            <div class="input-group text-primary">
              <h2> DeskVibe </h2>
            </div>
          </form>

          <!-- Topbar Navbar -->
          <ul class="navbar-nav ml-auto">

            <div class="topbar-divider d-none d-sm-block"></div>

            <!-- Nav Item - User Information -->
            <li class="nav-item dropdown no-arrow">
              <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown"
                aria-haspopup="true" aria-expanded="false">
                <span class="mr-2 d-none d-lg-inline text-gray-600 small">Hi, Alice Tan</span>
                <img class="img-profile rounded-circle" src="https://source.unsplash.com/QAB-WJcbgJk/60x60">
              </a>
              <!-- Dropdown - User Information -->
              <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in" aria-labelledby="userDropdown">
                <div class="dropdown-divider"></div>
                <a class="dropdown-item" href="#" data-toggle="modal" data-target="#logoutModal">
                  <i class="fa fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                  Logout
                </a>
              </div>
            </li>

          </ul>

        </nav>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Content Row -->
          <div class="row">

            <!-- Task -->
            <div class="col-xl-4 col-lg-5">
              <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                  <h6 class="m-0 font-weight-bold text-primary">Tasks</h6>
                </div>
                <div class="card-body">

                  {{#each this.model as |members|}}
                  <Members @members={{members}} />
                  {{/each}}


                  <br>
                </div>
              </div>
            </div>

            <!-- Bar Chart -->
            <div class="col-xl-8 col-lg-7">
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Time Taken for Tasks</h6>
                </div>
                <div class="card-body" >
                  <canvas id="myChart" ></canvas>
                </div>

              </div>
            </div>
          </div>

          <!-- Subtask Modal -->
          <div class="modal fade" id="subtaskModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-primary" id="subtaskModalTitle">Task 1</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <form>
                  <div class="modal-body">
                    <div class="form-group">
                      <input type="checkbox" id="1" name="1" value="true">
                      <label for="1">Subtask 1</label><br>
                    </div>
                    <div class="form-group">
                      <input type="checkbox" id="2" name="2" value="true">
                      <label for="2">Subtask 2</label><br>
                    </div>
                    <div class="form-group">
                      <input type="checkbox" id="3" name="3" value="true">
                      <label for="3">Subtask 3</label><br>
                    </div>
                    <div class="form-group">
                      <input type="checkbox" id="4" name="4" value="true">
                      <label for="4">Subtask 4</label><br>
                    </div>
                    <div class="modal-footer justify-content-center">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary" data-dismiss="modal" data-toggle="modal"
                        data-target="#createSubtaskModal"><i class="fa fa-plus fa-sm text-white-50"></i>Add New
                        Subtask</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

          <!-- Create Subtask Modal -->
          <div class="modal fade" id="createSubtaskModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-primary" id="createSubtaskModalTitle">Create New Subtask For Task 1</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <form>
                  <div class="modal-body">
                    <div class="form-group">
                      <label for="projectName">Subtask Name: </label>
                      <input type="text" class="form-control" id="projectName" placeholder="Enter a subtask name">
                    </div>
                    <div class="modal-footer justify-content-center">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary" data-dismiss="modal">Create</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>


          <!-- Content Row -->
          <div class="row">

            <!-- Content Column -->
            <div class="col-lg-6 mb-4">

              <!-- Surveys -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <div class="row">
                    <div class="col-sm">
                      <h6 class="m-0 font-weight-bold text-primary">Surveys</h6>
                    </div>
                    <div class="col-sm">
                      <span class="badge badge-primary badge-pill" style="float:right">1</span>
                    </div>
                  </div>
                </div>
                <div class="card-body">
                  <div class="card w-120">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm">
                          <h5 class="card-title">Work-Life Balance</h5>
                          <p class="card-text">Let me know your thoughts!</p>
                          <p class="card-text">Survey Due: 12 November 2020</p>
                        </div>
                        <div class="col-sm">
                          <span style="float: right" data-toggle="modal" data-target="#surveyModal"
                            class="btn btn-primary">Start Survey</span>
                        </div>
                      </div>
                    </div>
                  </div>
                  <br><br>
                </div>

              </div>

            </div>

            <div class="col-lg-6 mb-4">

              <!-- Feedback -->
              <div class="card shadow mb-4">
                <div class="card-header py-3">
                  <h6 class="m-0 font-weight-bold text-primary">Feedback</h6>
                </div>
                <div class="card-body">
                  <form>
                    <textarea id="feedback" name="feedback" style="resize: none;height:100px; width:100%">
					  </textarea>
                    <br>
                    <input type="checkbox" id="anonymous" name="anonymous" value="true">
                    <label for="anonymous">I would like to feedback anonymously</label><br>
                    <button type="button" class="btn btn-primary">Submit</button>
                  </form>
                </div>
              </div>

            </div>
          </div>

          <!-- Survey Modal -->
          <div class="modal fade" id="surveyModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title text-primary" id="surveyModalTitle">Work-Life Balance Survey:</h5>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <form>
                  <div class="modal-body">
                    <div class="row">
                      <div class="col-sm">
                        <p class="card-text">Survey Created By: Zoey</p>
                      </div>
                      <div class="col-sm">
                        <p class="card-text">Survey Created On: 5/11/2020</p>
                      </div>
                    </div>
                    <br>
                    <div class="form-group">
                      <label for="q1">1. How do you feel about your workload these days? </label>
                      <input type="text" class="form-control" id="q1">
                    </div>
                    <div class="form-group">
                      <label for="q2">2. Do you think you have sufficient rest? </label>
                      <input type="text" class="form-control" id="q2">
                    </div>
                    <div class="form-group">
                      <label for="q3">3. Are you able to differentiate work and rest? </label>
                      <input type="text" class="form-control" id="q3">
                    </div>
                    <div class="form-group">
                      <label for="q4">4. Do you find yourself working past working hours? </label>
                      <input type="text" class="form-control" id="q4">
                    </div>
                    <div class="modal-footer justify-content-center">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary" data-dismiss="modal">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <footer class="sticky-footer bg-white">
        <div class="container my-auto">
          <div class="copyright text-center my-auto">
             <span>Copyright &copy; DeskVibe 2020</span>
          </div>
        </div>
      </footer>
      <!-- End of Footer -->

      <div style="position: fixed; bottom: 5%; padding-left: 90%" class="text-primary">
        <div>
          <i class="fa fa-comments fa-3x"></i>
        </div>
      </div>
    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fa fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="/">Logout</a>
        </div>
      </div>
    </div>
  </div>

</body>

<script>
  var ctx = document.getElementById('myChart').getContext('2d');
  var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Develop User Story', 'Research project', 'Connect backend to mongo', 'Gather requirement'],
      datasets: [{
        label: '# of hours',
        data: [12, 19, 3, 5],
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)',
          'rgba(153, 102, 255, 0.2)',
          'rgba(255, 159, 64, 0.2)'
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(153, 102, 255, 1)',
          'rgba(255, 159, 64, 1)'
        ],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
          }
        }]
      }
    }
  });
</script>

{{outlet}}